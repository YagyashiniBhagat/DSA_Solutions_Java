class Solution {
    public int longestSubarray(int[] nums) {
        int n=nums.length;
        if(n<=2) return n;

        int maxlen=2,currlen=2;
        for(int i=2;i<n;i++){
            if(nums[i]==nums[i-1]+nums[i-2]){
                currlen++;
            }
            else{
                currlen=2;
            }
            maxlen=Math.max(maxlen,currlen);
        }
        return maxlen;
    }
}Â©leetcode
