class Solution {
    public int minPairSum(int[] nums) {
        Arrays.sort(nums);
        int n=nums.length;
        int i=0,j=n-1;
        int maxs=Integer.MIN_VALUE;
        while(i<j){
            int s=nums[i]+nums[j];
            maxs=Math.max(s,maxs);
            i++;
            j--;
        }
        return maxs;
    }
}
