class Solution {
    public int minpairsum(List<Integer> lt){
        int minsum=Integer.MAX_VALUE;
        int ind=-1;
        for(int i=0;i<lt.size()-1;i++){
            int sum=lt.get(i)+lt.get(i+1);
            if(sum<minsum){
                minsum=sum;
                ind=i;
            }
        }
        return ind;
    }
    public boolean issorted(List<Integer> lt){
        for(int i=0;i<lt.size()-1;i++){
            if(lt.get(i)>lt.get(i+1)) return false;
        }
        return true;
    }
    public int minimumPairRemoval(int[] nums) {
        List<Integer> lt=new ArrayList<>();
        for(int num:nums) lt.add(num);
        int operations=0;
        while(!issorted(lt)){
            int ind=minpairsum(lt);
            int merged=lt.get(ind)+lt.get(ind+1);
            lt.set(ind,merged);
            lt.remove(ind+1);
            operations++;
        }
        return operations;
    }
}
