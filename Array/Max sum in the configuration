class Solution {
    int maxSum(int[] arr) {
        // code here
        int ans=0,s=0,temp=0;
        int n=arr.length;
        for(int i=0;i<n;i++){
            temp+=(arr[i]*i);
            s+=arr[i];
        }
        ans=temp;
        for(int i=1;i<n;i++){
            temp=temp-s+arr[i-1]*n;
            ans=Math.max(ans,temp);
        }
        return ans;
    }
}
