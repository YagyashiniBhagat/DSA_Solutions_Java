class Solution {
    public int reverseBits(int n) {
        if(n==0) return 0;
        int res=0;
        for(int i=1;i<=32;i++){
            res<<=1;
            res=(res|(n&1));//n&1 to get the rightmost bit of n res | n&1 to append the rightmost bit in the answer
            n>>=1;
        }
        return res;
    }
}
