class Solution {
    public ListNode rotateRight(ListNode head, int k) {
        if(head==null || head.next==null) return head;
        ListNode tail=head;
        int len=1;
        ListNode temp=head;
        ListNode newhead=temp.next;
        while(tail.next!=null){
            tail=tail.next;
            len++;
        }
        k=k%len;
        if(k==0) return head;
        else{
            tail.next=head;
            int n=len-k;
            for(int i=1;i<n;i++){
                temp=temp.next;
            }
            newhead=temp.next;
            temp.next=null;
        }
        return newhead;
    }
}
