class Solution {
    Node merge(Node l1,Node l2){
        Node dummy=new Node(-1);
        Node res=dummy;
        while(l1!=null && l2!=null){
            if(l1.data<l2.data){
                res.bottom=l1;
                res=l1;
                l1=l1.bottom;
            }else{
                res.bottom=l2;
                res=l2;
                l2=l2.bottom;
            }
            res.next=null;
        }
        if(l1!=null) res.bottom=l1;
        else res.bottom=l2;
        
        if(dummy.bottom!=null) dummy.bottom.next=null;
        
        return dummy.bottom;
    }
    public Node flatten(Node root) {
        // code here
        if(root==null || root.next==null) return root;
        Node temp=root;
        Node mergedhead=flatten(root.next);
        return merge(mergedhead,root);
    }
}
