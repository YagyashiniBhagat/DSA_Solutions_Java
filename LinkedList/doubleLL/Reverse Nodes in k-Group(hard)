class Solution {
    ListNode reverse(ListNode head){
        if(head==null || head.next==null) return head;
        ListNode temp=head;
        ListNode prev=null;
        while(temp!=null){
            ListNode front=temp.next;
            temp.next=prev;
            prev=temp;
            temp=front;
        }
        return prev;
    }
    ListNode kthnode(ListNode temp,int k){
        k-=1;
        while(temp!=null && k>0){
            k--;
            temp=temp.next;
        }
        return temp;
    }
    public ListNode reverseKGroup(ListNode head, int k) {
        ListNode temp=head,prevnode=null;
        while(temp!=null){
            ListNode knode=kthnode(temp,k);
            if(knode==null){
                if(prevnode!=null) prevnode.next=temp;
                break;
            }else{
                ListNode nextnode=knode.next;
                knode.next=null;
                reverse(temp);
                if(temp==head) head=knode;
                else prevnode.next=knode;
                prevnode=temp;
                temp=nextnode;
            }
        }
        return head;
    }
}
