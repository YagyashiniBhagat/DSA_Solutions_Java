class Solution {
    public int lengthOfLoop(Node head) {
        // code here
        int c=1;
        Node slow=head;
        Node fast=head;
        while(fast!=null && fast.next!=null){
            slow=slow.next;
            fast=fast.next.next;
            if(slow==fast){
                slow=slow.next;
                while(slow!=fast){
                    slow=slow.next;
                    c++;
                }
                return c;
            }
        }
        return 0;
    }
}
