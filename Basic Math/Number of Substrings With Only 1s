class Solution {
    final int mod=(int)1e9+7;
    public int numSub(String s) {
        long c=0,onec=0;
        for(int i=0;i<s.length();i++){
            if(s.charAt(i)=='1'){
                onec++;
            }
            else{
                c=(c+onec*(onec+1)/2)%mod;
                onec=0;
            }
        }
        c=(c+onec*(onec+1)/2)%mod;
        return (int)c;
    }
}
