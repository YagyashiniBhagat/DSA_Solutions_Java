class Solution {

    static final int mod=(int)1e9+7;

    long pow(long a,long b){
        if(b==0) return 1;
        long half=pow(a,b/2);
        long res=(half*half)%mod;
        if(b%2==1) return (a*res)%mod;
        return res;
    }
    public int countGoodNumbers(long n) {
        long even=(n+1)/2, odd=n/2;
        long res=(pow(5,even)*pow(4,odd))%mod;
        return (int)res;
    }
}
