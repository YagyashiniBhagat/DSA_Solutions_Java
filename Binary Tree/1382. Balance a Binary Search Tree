/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public void inorder(TreeNode root,List<Integer> vec){
        if(root==null) return;
        inorder(root.left,vec);
        vec.add(root.val);
        inorder(root.right,vec);
    }
    public TreeNode construct(int l,int r,List<Integer> vec){
        if(l>r) return null;
        int m=l+(r-l) / 2;
        TreeNode newroot=new TreeNode(vec.get(m));
        newroot.left=construct(l,m-1,vec);
        newroot.right=construct(m+1,r,vec);
        return newroot;
    }
    public TreeNode balanceBST(TreeNode root) {
        List<Integer> vec=new ArrayList<>();
        inorder(root,vec);
        return construct(0,vec.size()-1,vec);
    }
}
