class Solution {
    public void combination(int i,int[] candidates, int s,List<List<Integer>> ans,List<Integer> ds){
        if(i==candidates.length){
            if(s==0)
                ans.add(new ArrayList<>(ds));
            return;
        }
        if(candidates[i]<=s){
            ds.add(candidates[i]);
            combination(i,candidates,s-candidates[i],ans,ds);
            ds.remove(ds.size()-1);
        }
        combination(i+1,candidates,s,ans,ds);
    }
    public List<List<Integer>> combinationSum(int[] candidates, int target) {
        List<List<Integer>> ans=new ArrayList<>();
        combination(0,candidates,target,ans,new ArrayList<>());
        return ans;
    }
}
