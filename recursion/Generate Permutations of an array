class Solution {
    public static void backtrack(ArrayList<Integer> curr,ArrayList<ArrayList<Integer>> ans,int[] arr,boolean[] visited){
        if(curr.size()==arr.length){
            ans.add(new ArrayList<>(curr));
            return; 
        }
        for(int i=0;i<arr.length;i++){
            if(!visited[i]){
                visited[i]=true;
                curr.add(arr[i]);
                backtrack(curr,ans,arr,visited);
                curr.remove(curr.size()-1);
                visited[i]=false;
            }
        }
    }
    public static ArrayList<ArrayList<Integer>> permuteDist(int[] arr) {
        // code here
        ArrayList<ArrayList<Integer>> ans=new ArrayList<>();
        int n=arr.length;
        boolean[] visited=new boolean[n];
        backtrack(new ArrayList<Integer>(),ans,arr,visited);
        return ans;
    }
};
